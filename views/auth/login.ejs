<% layout('layouts/boilerplate') %>

<!-- <h1>Login</h1> -->

<div class="container d-flex justify-content-center align-items-center mt-5 row">
    <!-- <div class="row"> -->
        <div class="col-md-6   col-xl-4 offset-cl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1496947850313-7743325fa58c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form class="validated-form" action="/login" method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Login</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    <!-- </div> -->
</div>